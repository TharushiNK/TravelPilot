                                ${paymentMethods.length > 0 
                                    ? paymentMethods.map(method => `
                                        <span class="payment-badge">${method}</span>
                                    `).join('')
                                    : '<span class="payment-badge">Not specified</span>'
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            ${photos.length > 0 ? `
                <div class="photos-section">
                    <h3><i class="fas fa-images"></i> Photos</h3>
                    <div class="photos-grid">
                        ${photos.map(photo => `
                            <div class="photo-item">
                                <img src="/uploads/${photo}" alt="Guide Photo">
                            </div>
                        `).join('')}
                    </div>
                </div>
            ` : ''}
        `;
        
        // Update the content
        guideDetailsContent.innerHTML = html;
        
        // Show the details container
        guideDetailsContainer.classList.add('active');
    }
    
    // Add event listeners to guide cards
    document.addEventListener('DOMContentLoaded', function() {
        const guideCards = document.querySelectorAll('.guide-card[data-guide-id]');
        
        guideCards.forEach(card => {
            card.addEventListener('click', function() {
                const guideId = this.dataset.guideId;
                const guideIndex = this.dataset.guideIndex;
                
                // Remove active class from all cards
                document.querySelectorAll('.guide-card').forEach(c => c.classList.remove('active'));
                // Add active class to clicked card
                this.classList.add('active');
                
                // Display guide details
                displayGuideDetails(guideId, guideIndex);
            });
        });
        
        // Initialize with first guide
        if (guidesData && guidesData.length > 0) {
            displayGuideDetails(guidesData[0].id, 0);
        }
    });
    
    // Event listeners for buttons
    document.getElementById('addFirstGuideBtn')?.addEventListener('click', function() {
        window.location.href = '/tour-guide/add';
    });
    
    function viewBookingsForGuide(guideId) {
        window.location.href = `/tour-guide/bookings?guide=${guideId}`;
    }
    
    document.getElementById('reportsBtn')?.addEventListener('click', function() {
        alert('Reports & Analytics page would open here.');
    });
    
    // Notification button
    document.querySelector('.notification-btn')?.addEventListener('click', function() {
        alert('You have 2 new notifications:\n1. New booking request\n2. Tour inquiry received');
    });
    
    // Smooth scroll for guide list
    if (guideList) {
        let isDown = false;
        let startX;
        let scrollLeft;
        
        guideList.addEventListener('mousedown', (e) => {
            isDown = true;
            guideList.classList.add('active');
            startX = e.pageX - guideList.offsetLeft;
            scrollLeft = guideList.scrollLeft;
        });
        
        guideList.addEventListener('mouseleave', () => {
            isDown = false;
            guideList.classList.remove('active');
        });
        
        guideList.addEventListener('mouseup', () => {
            isDown = false;
            guideList.classList.remove('active');
        });
        
        guideList.addEventListener('mousemove', (e) => {
            if (!isDown) return;
            e.preventDefault();
            const x = e.pageX - guideList.offsetLeft;
            const walk = (x - startX) * 2;
            guideList.scrollLeft = scrollLeft - walk;
        });
    }
</script>

