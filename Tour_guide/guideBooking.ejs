    <script>
        // User session check
        <% if (user && user.id) { %>
            const loggedInUser = {
                id: <%= user.id %>,
                name: '<%= user.name %>',
                email: '<%= user.email %>',
                phone: '<%= user.phone || "" %>'
            };
        <% } else { %>
            const loggedInUser = null;
        <% } %>
        
        // Current guide data
        let currentGuide = null;
        
        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            initializeImageSliders();
            setupEventListeners();
            setupDateInputs();
            populateLanguagesFilter();
            
            // Auto-populate user data if logged in
            if (loggedInUser) {
                populateUserData();
            }
        });
        
        function populateUserData() {
            if (loggedInUser) {
                document.getElementById('guestName').value = loggedInUser.name;
                document.getElementById('guestEmail').value = loggedInUser.email;
            }
        }
        
        // Image sliders initialization
        function initializeImageSliders() {
            document.querySelectorAll('.guide-image-container').forEach(container => {
                const slides = container.querySelector('.guide-slides');
                const prevBtn = container.querySelector('.prev-btn');
                const nextBtn = container.querySelector('.next-btn');
                const dots = container.querySelectorAll('.dot');
                
                if (!prevBtn || !nextBtn || !slides) return;
                
                let currentSlide = 0;
                const totalSlides = container.querySelectorAll('.guide-slide').length;
                
                if (totalSlides <= 1) {
                    container.querySelector('.slide-nav').style.display = 'none';
                    if (container.querySelector('.slide-dots')) {
                        container.querySelector('.slide-dots').style.display = 'none';
                    }
                    return;
                }
                
                function updateSlider() {
                    slides.style.transform = `translateX(-${currentSlide * 100}%)`;
                    dots.forEach((dot, index) => {
                        dot.classList.toggle('active', index === currentSlide);
                    });
                }
                
                prevBtn.addEventListener('click', (e) => {
                    e.stopPropagation();
                    currentSlide = (currentSlide - 1 + totalSlides) % totalSlides;
                    updateSlider();
                });
                
                nextBtn.addEventListener('click', (e) => {
                    e.stopPropagation();
                    currentSlide = (currentSlide + 1) % totalSlides;
                    updateSlider();
                });
                
                dots.forEach(dot => {
                    dot.addEventListener('click', (e) => {
                        e.stopPropagation();
                        currentSlide = parseInt(dot.dataset.index);
                        updateSlider();
                    });
                });
                
                // Auto slide
                let slideInterval = setInterval(() => {
                    currentSlide = (currentSlide + 1) % totalSlides;
                    updateSlider();
                }, 5000);
                
                // Pause on hover
                container.addEventListener('mouseenter', () => clearInterval(slideInterval));
                container.addEventListener('mouseleave', () => {
                    slideInterval = setInterval(() => {
                        currentSlide = (currentSlide + 1) % totalSlides;
                        updateSlider();
                    }, 5000);
                });
            });
        }
        
        // Populate language filters
        function populateLanguagesFilter() {
            const allLanguages = new Set();
            document.querySelectorAll('.guide-card').forEach(card => {
                const languages = card.dataset.languages.split(',');
                languages.forEach(lang => {
                    if (lang.trim()) allLanguages.add(lang.trim());
                });
            });
            
            const filterContainer = document.getElementById('languagesFilter');
            if (!filterContainer) return;
            
            filterContainer.innerHTML = '';
            
            Array.from(allLanguages).sort().forEach(language => {
                const button = document.createElement('button');
                button.type = 'button';
                button.className = 'language-tag';
                button.innerHTML = `
                    <i class="fas fa-language"></i>
                    ${language}
                `;
                button.dataset.language = language;
                
                button.addEventListener('click', function() {
                    this.classList.toggle('selected');
                    applyFilters();
                });
                
                filterContainer.appendChild(button);
            });
        }
        
        // Setup event listeners
        function setupEventListeners() {
            // Filter functionality
            const applyBtn = document.getElementById('apply-filters');
            const clearBtn = document.getElementById('clear-filters');
            const searchInput = document.getElementById('search');
            
            if (applyBtn) applyBtn.addEventListener('click', applyFilters);
            if (clearBtn) clearBtn.addEventListener('click', clearFilters);
            if (searchInput) searchInput.addEventListener('input', applyFilters);
            
            // District and experience filters
            const districtSelect = document.getElementById('district');
            const experienceSelect = document.getElementById('experience-range');
            
            if (districtSelect) districtSelect.addEventListener('change', applyFilters);
            if (experienceSelect) experienceSelect.addEventListener('change', applyFilters);
            
            // Booking buttons
            document.querySelectorAll('.book-btn').forEach(btn => {
                btn.addEventListener('click', openBookingModal);
            });
            
            // Modal controls
            const closeBtn = document.getElementById('closeModal');
            const cancelBtn = document.getElementById('cancelBooking');
            const modalOverlay = document.querySelector('.modal-overlay');
            
            if (closeBtn) closeBtn.addEventListener('click', closeBookingModal);
            if (cancelBtn) cancelBtn.addEventListener('click', closeBookingModal);
            if (modalOverlay) {
                modalOverlay.addEventListener('click', function(e) {
                    if (e.target === this) closeBookingModal();
                });
            }
            
            // Days counter
            const increaseBtn = document.getElementById('increaseDays');
            const decreaseBtn = document.getElementById('decreaseDays');
            
            if (increaseBtn) increaseBtn.addEventListener('click', () => updateDaysCount(1));
            if (decreaseBtn) decreaseBtn.addEventListener('click', () => updateDaysCount(-1));
            
            // Date input
            const dateInput = document.getElementById('bookingDate');
            if (dateInput) dateInput.addEventListener('change', calculateTotal);
            
            // Form submission
            const bookingForm = document.getElementById('bookingForm');
            if (bookingForm) bookingForm.addEventListener('submit', handleBooking);
            
            // Keyboard support
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') closeBookingModal();
            });
        }
        
        // Date input setup
        function setupDateInputs() {
            const today = new Date();
            const tomorrow = new Date();
            tomorrow.setDate(tomorrow.getDate() + 1);
            
            const todayStr = today.toISOString().split('T')[0];
            const tomorrowStr = tomorrow.toISOString().split('T')[0];
            
            const dateInput = document.getElementById('bookingDate');
            if (dateInput) {
                dateInput.min = tomorrowStr;
                dateInput.value = tomorrowStr;
            }
        }
        
        // Apply filters
        function applyFilters() {
            const searchTerm = document.getElementById('search').value.toLowerCase();
            const districtFilter = document.getElementById('district').value;
            const experienceFilter = document.getElementById('experience-range').value;
            const selectedLanguages = Array.from(document.querySelectorAll('.language-tag.selected'))
                .map(tag => tag.dataset.language);
            
            document.querySelectorAll('.guide-card').forEach(card => {
                const guideName = card.querySelector('.guide-name').textContent.toLowerCase();
                const guideDistrict = card.dataset.district;
                const guideExperience = parseFloat(card.dataset.experience) || 0;
                const guideLanguages = card.dataset.languages.split(',');
                
                let matches = true;
                
                // Search filter
                if (searchTerm && !guideName.includes(searchTerm)) {
                    matches = false;
                }
                
                // District filter
                if (districtFilter && guideDistrict !== districtFilter) {
                    matches = false;
                }
                
                // Experience filter
                if (experienceFilter) {
                    const [min, max] = experienceFilter.split('-').map(Number);
                    if (guideExperience < min || guideExperience > max) {
                        matches = false;
                    }
                }
                
                // Language filter
                if (selectedLanguages.length > 0) {
                    const hasSelectedLanguage = selectedLanguages.some(lang => 
                        guideLanguages.includes(lang)
                    );
                    if (!hasSelectedLanguage) {
                        matches = false;
                    }
                }
                
                card.style.display = matches ? 'block' : 'none';
            });
            
            // Show no guides message if needed
            const visibleCards = document.querySelectorAll('.guide-card[style="display: block"]');
            const noGuidesMsg = document.querySelector('.no-guides');
            
            if (visibleCards.length === 0) {
                if (!noGuidesMsg) {
                    const guideGrid = document.getElementById('guideGrid');
                    const msgDiv = document.createElement('div');
                    msgDiv.className = 'no-guides';
                    msgDiv.innerHTML = `
                        <div class="no-guides-icon">
                            <i class="fas fa-map-marked-alt"></i>
                        </div>
                        <h3>No tour guides found</h3>
                        <p>Try adjusting your filters or check back later for new guides</p>
                    `;
                    guideGrid.appendChild(msgDiv);
                }
            } else if (noGuidesMsg) {
                noGuidesMsg.remove();
            }
        }
        
        // Clear filters
        function clearFilters() {
            document.getElementById('search').value = '';
            document.getElementById('district').value = '';
            document.getElementById('experience-range').value = '';
            
            document.querySelectorAll('.language-tag.selected').forEach(tag => {
                tag.classList.remove('selected');
            });
            
            applyFilters();
        }
        
        // Open booking modal
        function openBookingModal(e) {
            e.preventDefault();
            
            // Check guide availability
            const guideAvailability = e.currentTarget.dataset.guideAvailability;
            if (guideAvailability === '0') {
                showNotification('This tour guide is currently unavailable for booking.', 'error');
                return;
            }
            
            const guideId = parseInt(e.currentTarget.dataset.guideId);
            const guideCard = document.querySelector(`.guide-card[data-guide-id="${guideId}"]`);
            
            if (!guideCard) return;
            
            // Extract guide data
            const guideName = guideCard.querySelector('.guide-name').textContent;
            const guideLocation = guideCard.querySelector('.guide-location span').textContent;
            const guidePrice = parseFloat(guideCard.querySelector('.guide-price').textContent.replace(/,/g, ''));
            const guideExperience = guideCard.dataset.experience;
            const guideLanguages = guideCard.dataset.languages.split(',').filter(l => l);
            const guideDistrict = guideCard.dataset.district;
            const offerPercentage = parseFloat(guideCard.dataset.offers) || 0;
            
            currentGuide = {
                id: guideId,
                name: guideName,
                location: guideLocation,
                price_per_day: guidePrice,
                experience_years: guideExperience,
                languages: guideLanguages,
                district: guideDistrict,
                offers: offerPercentage
            };
            
            // Update modal
            document.getElementById('modalGuideName').textContent = currentGuide.name;
            document.getElementById('modalGuideLocation').textContent = currentGuide.location;
            document.getElementById('guideName').value = currentGuide.name;
            
            // Populate guide details
            const detailsContainer = document.getElementById('guideDetails');
            const languagesString = currentGuide.languages.join(', ');
            
            detailsContainer.innerHTML = `
                <div class="detail-card">
                    <div class="detail-label">
                        <i class="fas fa-user-tie"></i> Guide Name
                    </div>
                    <div class="detail-value">${currentGuide.name}</div>
                </div>
                
                <div class="detail-card">
                    <div class="detail-label">
                        <i class="fas fa-map-marker-alt"></i> Location
                    </div>
                    <div class="detail-value">${currentGuide.district}</div>
                </div>
                
                <div class="detail-card">
                    <div class="detail-label">
                        <i class="fas fa-money-bill-wave"></i> Daily Rate
                    </div>
                    <div class="detail-value">LKR ${currentGuide.price_per_day.toLocaleString('en-LK')}</div>
                </div>
                
                <div class="detail-card">
                    <div class="detail-label">
                        <i class="fas fa-award"></i> Experience
                    </div>
                    <div class="detail-value">${currentGuide.experience_years} years</div>
                </div>
                
                <div class="detail-card">
                    <div class="detail-label">
                        <i class="fas fa-language"></i> Languages
                    </div>
                    <div class="detail-value">${languagesString || 'Not specified'}</div>
                </div>
                
                <div class="detail-card">
                    <div class="detail-label">
                        <i class="fas fa-gift"></i> Special Offers
                    </div>
                    <div class="detail-value">${currentGuide.offers > 0 ? currentGuide.offers + '% discount' : 'No special offers'}</div>
                </div>
            `;
            
            // Reset form
            setupDateInputs();
            document.getElementById('daysCount').textContent = '1';
            
            // Show modal
            document.getElementById('bookingModal').style.display = 'flex';
            calculateTotal();
        }
        
        // Close booking modal
        function closeBookingModal() {
            document.getElementById('bookingModal').style.display = 'none';
            currentGuide = null;
        }
        
        // Update days count
        function updateDaysCount(change) {
            const countElement = document.getElementById('daysCount');
            let currentCount = parseInt(countElement.textContent);
            currentCount = Math.max(1, Math.min(30, currentCount + change));
            countElement.textContent = currentCount;
            calculateTotal();
        }
        
        // Calculate total price
        function calculateTotal() {
            if (!currentGuide) return;
            
            const daysCount = parseInt(document.getElementById('daysCount').textContent);
            const dailyRate = currentGuide.price_per_day;
            
            document.getElementById('dailyRateDisplay').textContent = `LKR ${dailyRate.toLocaleString('en-LK')}`;
            document.getElementById('daysCountDisplay').textContent = daysCount;
            
            const subtotal = dailyRate * daysCount;
            const discountPercentage = currentGuide.offers || 0;
            const discount = subtotal * (discountPercentage / 100);
            const total = subtotal - discount;
            
            document.getElementById('discountPercentage').textContent = discountPercentage;
            document.getElementById('subtotal').textContent = `LKR ${subtotal.toLocaleString('en-LK')}`;
            document.getElementById('discount').textContent = discount > 0 ? `-LKR ${discount.toLocaleString('en-LK')}` : 'LKR 0';
            document.getElementById('totalAmount').textContent = `LKR ${total.toLocaleString('en-LK')}`;
        }
        
        // Validate booking form
        function validateBookingForm() {
            const requiredFields = [
                { id: 'guestName', name: 'Full Name' },
                { id: 'guestEmail', name: 'Email Address' },
                { id: 'bookingDate', name: 'Tour Date' }
            ];
            
            for (const field of requiredFields) {
                const element = document.getElementById(field.id);
                if (!element || !element.value.trim()) {
                    showNotification(`Please fill in the ${field.name} field`, 'warning');
                    if (element) element.focus();
                    return false;
                }
            }
            
            // Email validation
            const email = document.getElementById('guestEmail').value;
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailRegex.test(email)) {
                showNotification('Please enter a valid email address', 'warning');
                document.getElementById('guestEmail').focus();
                return false;
            }
            
            // Date validation
            const bookingDate = new Date(document.getElementById('bookingDate').value);
            const today = new Date();
            today.setHours(0, 0, 0, 0);
            
            if (bookingDate < today) {
                showNotification('Tour date cannot be in the past', 'warning');
                document.getElementById('bookingDate').focus();
                return false;
            }
            
            // Days count validation
            const daysCount = parseInt(document.getElementById('daysCount').textContent);
            if (daysCount < 1 || daysCount > 30) {
                showNotification('Please select between 1 and 30 days', 'warning');
                return false;
            }
            
            return true;
        }
        
        // Handle booking submission
        async function handleBooking(e) {
            e.preventDefault();
            
            // Check if user is logged in
            if (!loggedInUser) {
                showNotification('Please login to book a tour guide', 'error');
                setTimeout(() => {
                    window.location.href = '/login?redirect=' + encodeURIComponent(window.location.pathname);
                }, 1500);
                return;
            }
            
            // Validate form
            if (!validateBookingForm()) {
                return;
            }
            
            // Get booking data
            const bookingDate = document.getElementById('bookingDate').value;
            const daysCount = parseInt(document.getElementById('daysCount').textContent);
            const dailyRate = currentGuide.price_per_day;
            const subtotal = dailyRate * daysCount;
            const discountPercentage = currentGuide.offers || 0;
            const discount = subtotal * (discountPercentage / 100);
            const total = subtotal - discount;
            
            const bookingData = {
                guide_id: currentGuide.id,
                booking_date: bookingDate,
                no_of_days: daysCount,
                total_amount: total
            };
            
            console.log('Booking Data:', bookingData);
            
            try {
                // Show loading
                const confirmBtn = document.getElementById('confirmBooking');
                const originalText = confirmBtn.innerHTML;
                confirmBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';
                confirmBtn.disabled = true;
                
                // Send booking request
                const response = await fetch('/guides/bookings', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(bookingData)
                });
                
                const result = await response.json();
                
                if (result.success) {
                    // Success
                    showNotification(' Guide booked successfully! Your booking is pending guide approval.', 'success');
                    
                    // Close modal
                    setTimeout(() => {
                        closeBookingModal();
                    }, 2000);
                    
                } else {
                    // Error
                    showNotification(` ${result.message || 'Booking failed. Please try again.'}`, 'error');
                }
                
            } catch (error) {
                console.error('Booking error:', error);
                showNotification(' Network error. Please check your connection and try again.', 'error');
                
            } finally {
                // Reset button
                const confirmBtn = document.getElementById('confirmBooking');
                if (confirmBtn) {
                    confirmBtn.innerHTML = '<i class="fas fa-check"></i> Confirm Booking';
                    confirmBtn.disabled = false;
                }
            }
        }
        
        // Notification system
        function showNotification(message, type = 'info') {
            // Remove existing notifications
            const existingNotification = document.querySelector('.notification-toast');
            if (existingNotification) {
                existingNotification.remove();
            }
            
            // Create notification
            const notification = document.createElement('div');
            notification.className = `notification-toast notification-${type}`;
            notification.innerHTML = `
                <div class="notification-content">
                    <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'error' ? 'exclamation-circle' : 'info-circle'}"></i>
                    <span>${message}</span>
                </div>
                <button class="notification-close">
                    <i class="fas fa-times"></i>
                </button>
            `;
            
            // Add styles
            const style = document.createElement('style');
            style.textContent = `
                .notification-toast {
                    position: fixed;
                    top: 30px;
                    right: 30px;
                    background: white;
                    padding: 20px;
                    border-radius: 12px;
                    box-shadow: 0 10px 30px rgba(0,0,0,0.2);
                    display: flex;
                    align-items: center;
                    gap: 15px;
                    z-index: 10000;
                    animation: slideIn 0.3s ease-out;
                    border-left: 5px solid;
                    max-width: 400px;
                }
                
                .notification-success {
                    border-left-color: #10b981;
                }
                
                .notification-error {
                    border-left-color: #ef4444;
                }
                
                .notification-warning {
                    border-left-color: #f59e0b;
                }
                
                .notification-info {
                    border-left-color: #3b82f6;
                }
                
                .notification-content {
                    display: flex;
                    align-items: center;
                    gap: 12px;
                    flex: 1;
                }
                
                .notification-content i {
                    font-size: 1.2rem;
                }
                
                .notification-success .notification-content i {
                    color: #10b981;
                }
                
                .notification-error .notification-content i {
                    color: #ef4444;
                }
                
                .notification-warning .notification-content i {
                    color: #f59e0b;
                }
                
                .notification-info .notification-content i {
                    color: #3b82f6;
                }
                
                .notification-close {
                    background: none;
                    border: none;
                    color: #64748b;
                    cursor: pointer;
                    font-size: 1.2rem;
                    padding: 0;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    width: 30px;
                    height: 30px;
                    border-radius: 50%;
                    transition: all 0.3s;
                }
                
                .notification-close:hover {
                    background: #f1f5f9;
                    color: #1e293b;
                }
                
                @keyframes slideIn {
                    from {
                        transform: translateX(100%);
                        opacity: 0;
                    }
                    to {
                        transform: translateX(0);
                        opacity: 1;
                    }
                }
            `;
            
            document.head.appendChild(style);
            document.body.appendChild(notification);
            
            // Add close functionality
            notification.querySelector('.notification-close').addEventListener('click', () => {
                notification.remove();
            });
            
            // Auto remove after 5 seconds
            setTimeout(() => {
                if (notification.parentNode) {
                    notification.remove();
                }
            }, 5000);
        }
    </script>
