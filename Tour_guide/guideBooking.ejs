                                <!-- Action Buttons -->
                                <div class="card-actions">
                                    <button class="action-btn btn-book book-btn" 
                                            data-guide-id="<%= guide.id %>" 
                                            data-guide-availability="<%= guide.availability ? '1' : '0' %>"
