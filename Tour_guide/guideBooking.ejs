<body>
    <div class="main-container">
        <!-- Hero Header -->
        <div class="hero-header">
            <div class="hero-icon">
                <i class="fas fa-map-marked-alt"></i>
            </div>
            <h1 class="hero-title">Discover Sri Lanka's Best Guides</h1>
            <p class="hero-subtitle">Connect with certified local experts for unforgettable experiences</p>
        </div>

        <!-- Search & Filter Section -->
        <div class="filter-section">
            <h3 class="filter-title">
                <i class="fas fa-sliders-h"></i> Find Your Perfect Guide
            </h3>
            
            <div class="filter-grid">
                <div class="filter-group">
                    <label class="filter-label" for="search">
                        <i class="fas fa-search"></i> Search Guide
                    </label>
                    <input type="text" id="search" class="filter-input" placeholder="Enter guide name or specialty...">
                </div>
                
                <div class="filter-group">
                    <label class="filter-label" for="district">
                        <i class="fas fa-map-marker-alt"></i> District
                    </label>
                    <select id="district" class="filter-select">
                        <option value="">All Districts</option>
                        <% 
                        const districts = [];
                        if (guides && guides.length > 0) {
                            guides.forEach(guide => {
                                if (guide.district && !districts.includes(guide.district)) {
                                    districts.push(guide.district);
                                }
                            });
                            districts.sort();
                            districts.forEach(district => { %>
                                <option value="<%= district %>"><%= district %></option>
                            <% });
                        } %>
                    </select>
                </div>
                
                <div class="filter-group">
                    <label class="filter-label" for="experience-range">
                        <i class="fas fa-award"></i> Experience Level
                    </label>
                    <select id="experience-range" class="filter-select">
                        <option value="">All Levels</option>
                        <option value="0-2">Beginner (0-2 years)</option>
                        <option value="3-5">Intermediate (3-5 years)</option>
                        <option value="6-10">Experienced (6-10 years)</option>
                        <option value="11-100">Expert (10+ years)</option>
                    </select>
