                                   <% if (user && user.phone) { %> value="<%= user.phone %>" <% } %>>
                        </div>
                        
                        <div class="form-group">
                            <label class="form-label" for="checkIn">
                                <i class="fas fa-calendar-alt"></i> Check-in Date
                            </label>
                            <input type="date" id="checkIn" class="form-input" required>
                        </div>
                        
                        <div class="form-group">
                            <label class="form-label" for="checkOut">
                                <i class="fas fa-calendar-alt"></i> Check-out Date
                            </label>
                            <input type="date" id="checkOut" class="form-input" required>
                        </div>
                        
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-door-closed"></i> Number of Rooms
                            </label>
                            <div class="room-counter">
                                <button type="button" class="counter-btn" id="decreaseRooms">-</button>
                                <span class="counter-value" id="roomCount">1</span>
                                <button type="button" class="counter-btn" id="increaseRooms">+</button>
                            </div>
                        </div>
                        
                        <div class="form-group full-width">
                            <label class="form-label">
                                <i class="fas fa-bed"></i> Select Room Type
                            </label>
                            <div class="room-options-container" id="roomOptions">
                                <!-- Room options will be populated here -->
                            </div>
                        </div>
                    </div>
                    
                    <!-- Calculation Section -->
                    <div class="calculation-section">
                        <h3 class="calculation-title">
                            <i class="fas fa-calculator"></i> Booking Summary
                        </h3>
                        
                        <div class="calculation-row">
                            <span class="calculation-label">Room Price (per night)</span>
                            <span class="calculation-value" id="roomPriceDisplay">LKR 0</span>
                        </div>
                        
                        <div class="calculation-row">
                            <span class="calculation-label">Number of Rooms</span>
                            <span class="calculation-value" id="roomsCountDisplay">1</span>
                        </div>
                        
                        <div class="calculation-row">
                            <span class="calculation-label">Number of Nights</span>
                            <span class="calculation-value" id="nightsCount">0</span>
                        </div>
                        
                        <div class="calculation-row">
                            <span class="calculation-label">Subtotal</span>
                            <span class="calculation-value" id="subtotal">LKR 0</span>
                        </div>
                        
                        <div class="calculation-row">
                            <span class="calculation-label">Discount (<span id="discountPercentage">15</span>%)</span>
                            <span class="calculation-value discount-value" id="discount">-LKR 0</span>
                        </div>
                        
                        <div class="calculation-row total-row">
                            <span class="calculation-label">Total Amount</span>
                            <span class="calculation-value" id="totalAmount">LKR 0</span>
                        </div>
                    </div>
                    
                    <!-- Hotel Details -->
                    <div class="hotel-details-section">
                        <h3 class="details-title">
                            <i class="fas fa-info-circle"></i> Hotel Details
                        </h3>
                        <div class="details-grid" id="hotelDetails">
                            <!-- Hotel details will be populated here -->
                        </div>
                    </div>
                    
                    <div class="modal-footer">
                        <% if (user && user.id) { %>
                        <button type="submit" class="modal-btn modal-btn-primary" id="confirmBooking">
                            <i class="fas fa-check"></i> Confirm Booking
                        </button>
                        <% } else { %>
                        <button type="button" class="modal-btn modal-btn-primary" onclick="window.location.href='/login?redirect=/hotels'">
                            <i class="fas fa-sign-in-alt"></i> Login to Book
                        </button>
                        <% } %>
                        <button type="button" class="modal-btn modal-btn-secondary" id="cancelBooking">
                            <i class="fas fa-times"></i> Cancel
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        // User session check
        <% if (user && user.id) { %>
            const loggedInUser = {
                id: <%= user.id %>,
                name: '<%= user.name %>',
                email: '<%= user.email %>',
                phone: '<%= user.phone || "" %>'
            };
        <% } else { %>
            const loggedInUser = null;
        <% } %>
        
        // Current hotel data
        let currentHotel = null;
        
        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            initializeImageSliders();
            setupEventListeners();
            setupDateInputs();
            populateRoomTypesFilter();
            
            // Auto-populate user data if logged in
            if (loggedInUser) {
                populateUserData();
            }
        });
        
        function populateUserData() {
            if (loggedInUser) {
                document.getElementById('guestName').value = loggedInUser.name;
                document.getElementById('guestEmail').value = loggedInUser.email;
                if (loggedInUser.phone) {
                    document.getElementById('guestPhone').value = loggedInUser.phone;
                }
            }
        }
        
        // Image sliders initialization
        function initializeImageSliders() {
            document.querySelectorAll('.hotel-image-container').forEach(container => {
                const slides = container.querySelector('.hotel-slides');
                const prevBtn = container.querySelector('.prev-btn');
                const nextBtn = container.querySelector('.next-btn');
                const dots = container.querySelectorAll('.dot');
                
                if (!prevBtn || !nextBtn || !slides) return;
                
                let currentSlide = 0;
                const totalSlides = container.querySelectorAll('.hotel-slide').length;
                
                if (totalSlides <= 1) {
                    container.querySelector('.slide-nav').style.display = 'none';
                    if (container.querySelector('.slide-dots')) {
                        container.querySelector('.slide-dots').style.display = 'none';
                    }
                    return;
                }
                
                function updateSlider() {
                    slides.style.transform = `translateX(-${currentSlide * 100}%)`;
                    dots.forEach((dot, index) => {
                        dot.classList.toggle('active', index === currentSlide);
                    });
                }
                
                prevBtn.addEventListener('click', (e) => {
                    e.stopPropagation();
                    currentSlide = (currentSlide - 1 + totalSlides) % totalSlides;
                    updateSlider();
                });
                
