                if (searchTerm && !hotelName.includes(searchTerm)) {
                    matches = false;
                }
                
                // District filter
                if (districtFilter && hotelDistrict !== districtFilter) {
                    matches = false;
                }
                
                // Price filter
                if (priceFilter) {
                    const [min, max] = priceFilter.split('-').map(Number);
                    if (hotelPrice < min || hotelPrice > max) {
                        matches = false;
                    }
                }
                
                // Room type filter
                if (selectedRoomTypes.length > 0) {
                    const hasSelectedType = selectedRoomTypes.some(type => 
                        hotelRoomTypes.includes(type)
                    );
                    if (!hasSelectedType) {
                        matches = false;
                    }
                }
                
                card.style.display = matches ? 'block' : 'none';
            });
            
            // Show no hotels message if needed
            const visibleCards = document.querySelectorAll('.hotel-card[style="display: block"]');
