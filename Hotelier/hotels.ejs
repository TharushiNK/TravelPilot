        // Calculate total price
        function calculateTotal() {
            if (!currentHotel) return;
            
            const roomCount = parseInt(document.getElementById('roomCount').textContent);
            const checkIn = new Date(document.getElementById('checkIn').value);
            const checkOut = new Date(document.getElementById('checkOut').value);
            
            // Validate dates
            if (checkIn >= checkOut) {
                document.getElementById('nightsCount').textContent = '0';
                document.getElementById('roomPriceDisplay').textContent = 'LKR 0';
                document.getElementById('roomsCountDisplay').textContent = '0';
                document.getElementById('subtotal').textContent = 'LKR 0';
                document.getElementById('discount').textContent = '-LKR 0';
                document.getElementById('totalAmount').textContent = 'LKR 0';
                return;
            }
            
            const nights = Math.ceil((checkOut - checkIn) / (1000 * 60 * 60 * 24));
            document.getElementById('nightsCount').textContent = nights;
            
            // Get selected room price
            const selectedRoom = document.querySelector('.room-option-card.selected');
            let roomPrice = 0;
            if (selectedRoom) {
                roomPrice = parseFloat(selectedRoom.dataset.price);
                document.getElementById('roomPriceDisplay').textContent = `LKR ${roomPrice.toLocaleString('en-LK')}`;
            }
            
            document.getElementById('roomsCountDisplay').textContent = roomCount;
            
            const subtotal = roomPrice * roomCount * nights;
            const discount = subtotal * 0.15; // 15% discount
            const total = subtotal - discount;
            
            document.getElementById('subtotal').textContent = `LKR ${subtotal.toLocaleString('en-LK')}`;
            document.getElementById('discount').textContent = `-LKR ${discount.toLocaleString('en-LK')}`;
            document.getElementById('totalAmount').textContent = `LKR ${total.toLocaleString('en-LK')}`;
        }
        
        // Validate booking form
        function validateBookingForm() {
            const requiredFields = [
                { id: 'guestName', name: 'Full Name' },
                { id: 'guestEmail', name: 'Email Address' },
                { id: 'guestPhone', name: 'Phone Number' },
                { id: 'checkIn', name: 'Check-in Date' },
                { id: 'checkOut', name: 'Check-out Date' }
            ];
            
            for (const field of requiredFields) {
                const element = document.getElementById(field.id);
                if (!element || !element.value.trim()) {
                    showNotification(`Please fill in the ${field.name} field`, 'warning');
                    if (element) element.focus();
                    return false;
                }
            }
            
            // Email validation
            const email = document.getElementById('guestEmail').value;
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailRegex.test(email)) {
                showNotification('Please enter a valid email address', 'warning');
                document.getElementById('guestEmail').focus();
                return false;
            }
            
            // Date validation
            const bookingDate = new Date(document.getElementById('checkIn').value);
            const today = new Date();
            today.setHours(0, 0, 0, 0);
            
            if (bookingDate < today) {
                showNotification('Check-in date cannot be in the past', 'warning');
                document.getElementById('checkIn').focus();
                return false;
            }
            
            // Check if room is selected
            const selectedRoom = document.querySelector('.room-option-card.selected');
            if (!selectedRoom) {
                showNotification('Please select a room type', 'warning');
                return false;
            }
            
            // Check room count
            const roomCount = parseInt(document.getElementById('roomCount').textContent);
            if (roomCount < 1) {
                showNotification('Please select at least 1 room', 'warning');
                return false;
            }
            
            // Check max rooms availability
            const maxRooms = parseInt(selectedRoom.dataset.maxRooms);
            if (roomCount > maxRooms) {
                showNotification(`Only ${maxRooms} rooms available for selected type`, 'warning');
                return false;
            }
            
            return true;
        }
        
        // Handle booking submission
        async function handleBooking(e) {
            e.preventDefault();
            
            // Check if user is logged in
            if (!loggedInUser) {
                showNotification('Please login to book a hotel', 'error');
                setTimeout(() => {
                    window.location.href = '/login?redirect=' + encodeURIComponent(window.location.pathname);
                }, 1500);
                return;
            }
            
            // Validate form
            if (!validateBookingForm()) {
                return;
            }
            
            const selectedRoom = document.querySelector('.room-option-card.selected');
            if (!selectedRoom) {
                showNotification('Please select a room type', 'error');
                return;
            }
            
            const roomId = selectedRoom.dataset.roomId;
            const roomPrice = parseFloat(selectedRoom.dataset.price);
            const roomType = selectedRoom.dataset.roomType;
            
            // Get calculation values
            const checkIn = document.getElementById('checkIn').value;
            const checkOut = document.getElementById('checkOut').value;
            const roomCount = parseInt(document.getElementById('roomCount').textContent);
            const totalAmount = parseFloat(document.getElementById('totalAmount').textContent.replace(/[^0-9.]/g, ''));
            const discount = parseFloat(document.getElementById('discount').textContent.replace(/[^0-9.]/g, '')) || 0;
            
            // Prepare booking data
            const bookingData = {
                hotel_id: currentHotel.id,
                guest_name: document.getElementById('guestName').value,
                guest_email: document.getElementById('guestEmail').value,
                guest_contact: document.getElementById('guestPhone').value,
                room_type: roomType,
                no_of_rooms: roomCount,
                checkin_date: checkIn,
                checkout_date: checkOut,
                discounted_amount: discount,
                total_amount: totalAmount,
                room_price: roomPrice
            };
            
            console.log('Sending booking data:', bookingData);
            
            try {
                // Show loading
                const confirmBtn = document.getElementById('confirmBooking');
                const originalText = confirmBtn.innerHTML;
                confirmBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';
                confirmBtn.disabled = true;
                
                const response = await fetch('/bookings', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(bookingData)
                });
                
                if (!response.ok) {
                    const errorText = await response.text();
                    throw new Error(`Server responded with status ${response.status}`);
                }
                
                const result = await response.json();
                
                if (result.success) {
                    // Success
                    showNotification(' Booking confirmed! Your booking is pending hotel approval.', 'success');
                    
                    // Update the UI to reflect new availability
                    if (currentHotel && currentHotel.rooms.length > 0) {
                        const updatedRooms = currentHotel.rooms.map(room => {
                            if (room.room_type === roomType) {
                                return {
                                    ...room,
                                    available_rooms: Math.max(0, room.available_rooms - roomCount)
                                };
                            }
                            return room;
                        });
                        
                        // Update the card data attribute
                        const hotelCard = document.querySelector(`.hotel-card[data-hotel-id="${currentHotel.id}"]`);
                        if (hotelCard) {
                            hotelCard.dataset.roomDetails = JSON.stringify(updatedRooms);
                        }
                        
                        // Update modal display
                        updateRoomOptionsWithAvailability(updatedRooms);
                    }
                    
                    // Close modal
                    setTimeout(() => {
                        closeBookingModal();
                    }, 2000);
                    
                } else {
                    // Error from server
                    showNotification(` ${result.message || 'Booking failed. Please try again.'}`, 'error');
                }
                
            } catch (error) {
                console.error('Booking error details:', error);
                
                if (error.message.includes('NetworkError') || error.message.includes('Failed to fetch')) {
                    showNotification(' Network error. Please check your connection and try again.', 'error');
                } else {
                    showNotification(` Error: ${error.message}`, 'error');
                }
            } finally {
                // Reset button
                const confirmBtn = document.getElementById('confirmBooking');
                if (confirmBtn) {
                    confirmBtn.innerHTML = '<i class="fas fa-check"></i> Confirm Booking';
                    confirmBtn.disabled = false;
                }
            }
        }
        
