<body>
    <div class="main-container">
        <!-- Hero Header -->
        <div class="hero-header">
            <div class="hero-icon">
                <i class="fas fa-car"></i>
            </div>
            <h1 class="hero-title">Discover Sri Lanka's Best Transport Services</h1>
            <p class="hero-subtitle">Comfortable, Reliable, and Professional Transportation</p>
        </div>

        <!-- Search & Filter Section -->
        <div class="filter-section">
            <h3 class="filter-title">
                <i class="fas fa-sliders-h"></i> Find Your Perfect Transport
            </h3>
            
            <div class="filter-grid">
                <div class="filter-group">
                    <label class="filter-label" for="search">
                        <i class="fas fa-search"></i> Search Provider
                    </label>
                    <input type="text" id="search" class="filter-input" placeholder="Enter provider name or location...">
                </div>
                
                <div class="filter-group">
                    <label class="filter-label" for="district">
                        <i class="fas fa-map-marker-alt"></i> District
                    </label>
                    <select id="district" class="filter-select">
                        <option value="">All Districts</option>
                        <% 
                        const districts = [];
                        if (providers && providers.length > 0) {
                            providers.forEach(provider => {
                                if (provider.district && !districts.includes(provider.district)) {
                                    districts.push(provider.district);
                                }
                            });
                            districts.sort();
                            districts.forEach(district => { %>
                                <option value="<%= district %>"><%= district %></option>
                            <% });
                        } %>
                    </select>
                </div>
                
                <div class="filter-group">
                    <label class="filter-label" for="price-range">
                        <i class="fas fa-tag"></i> Price Range (per km)
                    </label>
                    <select id="price-range" class="filter-select">
                        <option value="">Any Price</option>
                        <option value="0-100">Under LKR 100/km</option>
                        <option value="100-300">LKR 100 - 300/km</option>
                        <option value="300-500">LKR 300 - 500/km</option>
                        <option value="500-1000">LKR 500 - 1,000/km</option>
                        <option value="1000-9999">Over LKR 1,000/km</option>
                    </select>
                </div>
            </div>
            
            <div class="filter-group">
                <label class="filter-label">
                    <i class="fas fa-car"></i> Vehicle Types
                </label>
                <div class="vehicle-tags-container" id="vehicleTypesFilter">
                    <!-- Vehicle types will be populated dynamically -->
                </div>
            </div>
            
            <div class="filter-buttons">
                <button class="filter-btn filter-btn-primary" id="apply-filters">
                    <i class="fas fa-filter"></i> Apply Filters
                </button>
                <button class="filter-btn filter-btn-secondary" id="clear-filters">
                    <i class="fas fa-redo"></i> Clear All
                </button>
            </div>
        </div>

        <!-- Providers Grid -->
        <div class="providers-section">
            <h2 class="section-title">Featured Transport Providers</h2>
            
            <div class="provider-grid" id="providerGrid">
                <% if (providers && providers.length > 0) { %>
                    <% providers.forEach(provider => { 
                        const minPrice = provider.min_price || 0;
                        const maxPrice = provider.max_price || 0;
                        const vehicleTypes = provider.vehicleTypes || [];
                        const experience = provider.experience_years || 0;
                        const offersPercentage = provider.offers || 0;
                        const capacities = provider.capacitiesArray || [];
                        const availableVehicles = provider.availableVehicles_count || 0;
                    %>
                        <div class="provider-card" 
                            data-provider-id="<%= provider.id %>" 
                            data-district="<%= provider.district || '' %>" 
                            data-min-price="<%= minPrice %>"
                            data-max-price="<%= maxPrice %>"
                            data-vehicle-types="<%= vehicleTypes.join(',') %>"
                            data-vehicles='<%= JSON.stringify(provider.vehicles || []) %>'>
                        
                            
                            <!-- Available Vehicles Badge -->
                            <% if (availableVehicles > 0 && availableVehicles < 3) { %>
                                <div class="provider-badge">
                                    <i class="fas fa-clock"></i> Only <%= availableVehicles %> Available
                                </div>
                            <% } %>
                            
                            <!-- Image -->
                            <div class="provider-image-container">
                                <% if (provider.photosArray && provider.photosArray.length > 0) { %>
                                    <img src="<%= provider.photosArray[0] %>" alt="<%= provider.name %>" class="provider-image">
                                <% } else { %>
                                    <img src="/images/default-vehicle.jpg" alt="<%= provider.name %>" class="provider-image">
                                <% } %>
                            </div>
                            
                            <!-- Provider Info -->
                            <div class="provider-info">
                                <div class="provider-header">
                                    <div>
                                        <h3 class="provider-name"><%= provider.name %></h3>
                                        <div class="provider-location">
                                            <i class="fas fa-map-marker-alt"></i>
                                            <span><%= provider.city || '' %>, <%= provider.district || '' %></span>
                                        </div>
                                    </div>
                                    <% if (experience > 0) { %>
                                    <div class="experience-badge">
                                        <i class="fas fa-star"></i> <%= experience %> yrs
                                    </div>
                                    <% } %>
                                </div>
                                
                                <!-- Price Range -->
                                <div class="price-section">
                                    <div class="price-label">Price Range (per km)</div>
                                    <div class="price-amount">
                                        <% if (minPrice && maxPrice) { %>
                                            LKR <span class="min-price"><%= minPrice %></span> - 
                                            <span class="max-price"><%= maxPrice %></span>
                                            <span class="price-unit">/ km</span>
                                        <% } else if (minPrice) { %>
                                            LKR <span class="min-price"><%= minPrice %></span>
                                            <span class="price-unit">/ km</span>
                                        <% } else { %>
                                            <span>Contact for Price</span>
                                        <% } %>
                                    </div>
                                </div>
                                
                                <!-- Vehicle Types -->
                                <div class="vehicle-types-section">
                                    <div class="vehicle-types-title">Available Vehicle Types</div>
                                    <div class="vehicle-types-tags">
                                        <% if (vehicleTypes && vehicleTypes.length > 0) { %>
                                            <% vehicleTypes.slice(0, 4).forEach((vehicleType, index) => { 
                                            // Find the vehicle with this type to get its capacity
                                            const vehicle = provider.vehicles ? provider.vehicles.find(v => v.vehicle_type === vehicleType) : null;
                                            const capacity = vehicle ? vehicle.max_passengers : '';
                                        %>
                                            <span class="vehicle-type-tag">
                                                <i class="fas fa-<%= vehicleType.toLowerCase().includes('car') ? 'car' : 
                                                    vehicleType.toLowerCase().includes('bus') ? 'bus' : 
                                                    vehicleType.toLowerCase().includes('van') ? 'van' : 
                                                    'shuttle-van' %>"></i>
                                                <%= vehicleType %> <%= capacity ? `(${capacity} seats)` : '' %>
                                            </span>
                                        <% }); %>
                                            <% if (vehicleTypes.length > 4) { %>
                                                <span class="vehicle-type-tag">+<%= vehicleTypes.length - 4 %> more</span>
                                            <% } %>
                                        <% } else { %>
                                            <span class="vehicle-type-tag">No vehicles available</span>
                                        <% } %>
                                    </div>
                                </div>
                                
                                <!-- Features -->
                                <div class="provider-features">
                                    <div class="feature-item">
                                        <div class="feature-icon">
                                            <i class="fas fa-car"></i>
                                        </div>
                                        <div>
                                            <div class="feature-text">Available Vehicles</div>
                                            <div class="feature-value"><%= provider.availableVehicles_count || 0 %> vehicles</div>
                                        </div>
                                    </div>
                                    <div class="feature-item">
                                        <div class="feature-icon">
                                            <i class="fas fa-money-bill-wave"></i>
                                        </div>
                                        <div>
                                            <div class="feature-text">Payment Methods</div>
                                            <div class="feature-value"><%= provider.payment_methods || 'Cash/Card' %></div>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Contact & Offers -->
                                <div class="contact-offers">
                                    <div class="contact-info">
                                        <i class="fas fa-phone"></i>
                                        <span><%= provider.telephone || 'Contact for details' %></span>
                                    </div>
                                    
                                    <% if (offersPercentage > 0) { %>
                                        <div class="offer-tag">
                                            <i class="fas fa-percentage"></i>
                                            <%= offersPercentage %>% Discount
                                        </div>
                                    <% } %>
                                </div>
                                
                                <!-- Action Buttons -->
                                <div class="card-actions">
                                    <button class="action-btn btn-book book-btn" 
                                            data-provider-id="<%= provider.id %>"
                                            <%= provider.availableVehicles_count === 0 ? 'disabled' : '' %>>
                                        <i class="fas fa-calendar-check"></i>
                                        <%= provider.availableVehicles_count === 0 ? 'Not Available' : 'Book Now' %>
                                    </button>
                                    
                                    <button class="action-btn btn-details details-btn" data-provider-id="<%= provider.id %>">
                                        <i class="fas fa-info-circle"></i>
                                        Details
                                    </button>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="no-providers">
                        <div class="no-providers-icon">
                            <i class="fas fa-car"></i>
                        </div>
                        <h3>No transport providers found</h3>
                        <p>Try adjusting your filters or check back later for new providers</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Booking Modal -->
    <div class="modal-overlay" id="bookingModal">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title" id="modalProviderName">Provider Name</h2>
                <p class="modal-subtitle" id="modalProviderLocation">Location</p>
                <button class="modal-close" id="closeModal">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            
            <div class="modal-body">
                <form id="bookingForm">
                    <% if (!user || !user.id) { %>
                    <div class="login-warning">
                        <div class="login-warning-icon">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                        <p>You need to be logged in to book transport. Sign in to continue with your booking.</p>
                        <a href="/login?redirect=/transport-providers" class="login-link">
                            <i class="fas fa-sign-in-alt"></i>
                            Login to Continue
                        </a>
                    </div>
                    <% } %>
                    
                    <div class="booking-form-grid">
                        <div class="form-group full-width">
                            <label class="form-label" for="providerName">
                                <i class="fas fa-building"></i> Selected Transport Provider
                            </label>
                            <input type="text" id="providerName" class="form-input" readonly>
                        </div>
                        
                        <div class="form-group">
                            <label class="form-label" for="guestName">
                                <i class="fas fa-user"></i> Full Name
                            </label>
                            <input type="text" id="guestName" class="form-input" required 
                                   placeholder="Enter your full name"
                                   <% if (user && user.name) { %> value="<%= user.name %>" <% } %>>
                        </div>
                        
                        <div class="form-group">
                            <label class="form-label" for="guestEmail">
                                <i class="fas fa-envelope"></i> Email Address
                            </label>
                            <input type="email" id="guestEmail" class="form-input" required 
                                   placeholder="Enter your email"
                                   <% if (user && user.email) { %> value="<%= user.email %>" <% } %>>
                        </div>
                        
                        <div class="form-group">
                            <label class="form-label" for="pickupLocation">
                                <i class="fas fa-map-marker-alt"></i> Pickup Location
                            </label>
                            <input type="text" id="pickupLocation" class="form-input" required 
                                   placeholder="Enter pickup address">
                        </div>
                        
                        <div class="form-group">
                            <label class="form-label" for="destinationLocations">
                                <i class="fas fa-flag-checkered"></i> Destinations
                            </label>
                            <textarea id="destinationLocations" class="form-input" 
                                   placeholder="Enter destinations (separate with commas if multiple)"
                                   rows="3"></textarea>
                        </div>
                        
                        <div class="form-group">
                            <label class="form-label" for="startDate">
                                <i class="fas fa-calendar-alt"></i> Start Date
                            </label>
                            <input type="date" id="startDate" class="form-input" required>
                        </div>
                        
                        <div class="form-group">
                            <label class="form-label" for="endDate">
                                <i class="fas fa-calendar-alt"></i> End Date
                            </label>
                            <input type="date" id="endDate" class="form-input" required>
                        </div>
                        
                        <div class="form-group full-width">
                            <label class="form-label">
                                <i class="fas fa-car"></i> Select Vehicle Type
                            </label>
                            <div class="vehicle-options-container" id="vehicleOptions">
                                <!-- Vehicle options will be populated here -->
                            </div>
                        </div>
                        
                        <div class="form-group full-width">
                            <label class="form-label" for="notes">
                                <i class="fas fa-sticky-note"></i> Additional Notes
                            </label>
                            <textarea id="notes" class="form-input" 
                                   placeholder="Any special requirements or notes"
                                   rows="3"></textarea>
                        </div>
                    </div>
                    
                    <!-- Provider Details -->
                    <div class="provider-details-section">
                        <h3 class="details-title">
                            <i class="fas fa-info-circle"></i> Provider Details
                        </h3>
                        <div class="details-grid" id="providerDetails">
                            <!-- Provider details will be populated here -->
                        </div>
                    </div>
                    
                    <div class="modal-footer">
                        <% if (user && user.id) { %>
                        <button type="submit" class="modal-btn modal-btn-primary" id="confirmBooking">
                            <i class="fas fa-check"></i> Confirm Booking
                        </button>
                        <% } else { %>
                        <button type="button" class="modal-btn modal-btn-primary" onclick="window.location.href='/login?redirect=/transport-providers'">
                            <i class="fas fa-sign-in-alt"></i> Login to Book
                        </button>
                        <% } %>
                        <button type="button" class="modal-btn modal-btn-secondary" id="cancelBooking">
                            <i class="fas fa-times"></i> Cancel
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        // User session check
        <% if (user && user.id) { %>
            const loggedInUser = {
                id: <%= user.id %>,
                name: '<%= user.name %>',
                email: '<%= user.email %>',
                phone: '<%= user.phone || "" %>'
            };
        <% } else { %>
            const loggedInUser = null;
        <% } %>
        
        // Current provider data
        let currentProvider = null;
        
        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            setupEventListeners();
            setupDateInputs();
            populateVehicleTypesFilter();
            
            // Auto-populate user data if logged in
            if (loggedInUser) {
                populateUserData();
            }
        });
        
        function populateUserData() {
            if (loggedInUser) {
                document.getElementById('guestName').value = loggedInUser.name;
                document.getElementById('guestEmail').value = loggedInUser.email;
                if (loggedInUser.phone) {
                    document.getElementById('guestPhone').value = loggedInUser.phone;
                }
            }
        }
        
        // Populate vehicle type filters
        function populateVehicleTypesFilter() {
            const allVehicleTypes = new Set();
            document.querySelectorAll('.provider-card').forEach(card => {
                const vehicleTypes = card.dataset.vehicleTypes.split(',');
                vehicleTypes.forEach(type => {
                    if (type.trim()) allVehicleTypes.add(type.trim());
                });
            });
            
            const filterContainer = document.getElementById('vehicleTypesFilter');
            if (!filterContainer) return;
            
            filterContainer.innerHTML = '';
            
            Array.from(allVehicleTypes).sort().forEach(vehicleType => {
                const button = document.createElement('button');
                button.type = 'button';
                button.className = 'vehicle-tag';
                button.innerHTML = `
                    <i class="fas fa-${vehicleType.toLowerCase().includes('car') ? 'car' : 
                        vehicleType.toLowerCase().includes('bus') ? 'bus' : 
                        vehicleType.toLowerCase().includes('van') ? 'van' : 
                        'shuttle-van'}"></i>
                    ${vehicleType}
                `;
                button.dataset.vehicleType = vehicleType;
                
                button.addEventListener('click', function() {
                    this.classList.toggle('selected');
                    applyFilters();
                });
                
                filterContainer.appendChild(button);
            });
        }
        
        // Setup event listeners
        function setupEventListeners() {
            // Filter functionality
            const applyBtn = document.getElementById('apply-filters');
            const clearBtn = document.getElementById('clear-filters');
            const searchInput = document.getElementById('search');
            
            if (applyBtn) applyBtn.addEventListener('click', applyFilters);
            if (clearBtn) clearBtn.addEventListener('click', clearFilters);
            if (searchInput) searchInput.addEventListener('input', applyFilters);
            
            // District and price filters
            const districtSelect = document.getElementById('district');
            const priceSelect = document.getElementById('price-range');
            
            if (districtSelect) districtSelect.addEventListener('change', applyFilters);
            if (priceSelect) priceSelect.addEventListener('change', applyFilters);
            
            // Booking buttons
            document.querySelectorAll('.book-btn').forEach(btn => {
                btn.addEventListener('click', openBookingModal);
            });
            
            // Details buttons
            document.querySelectorAll('.details-btn').forEach(btn => {
                btn.addEventListener('click', openDetailsModal);
            });
            
            // Modal controls
            const closeBtn = document.getElementById('closeModal');
            const cancelBtn = document.getElementById('cancelBooking');
            const modalOverlay = document.querySelector('.modal-overlay');
            
            if (closeBtn) closeBtn.addEventListener('click', closeBookingModal);
            if (cancelBtn) cancelBtn.addEventListener('click', closeBookingModal);
            if (modalOverlay) {
                modalOverlay.addEventListener('click', function(e) {
                    if (e.target === this) closeBookingModal();
                });
            }
            
            // Date inputs
            const startDateInput = document.getElementById('startDate');
            const endDateInput = document.getElementById('endDate');
            
            if (startDateInput) startDateInput.addEventListener('change', function() {
                // Update end date minimum
                if (endDateInput) {
                    endDateInput.min = this.value;
                }
                
                if (currentProvider && currentProvider.vehicles.length > 0) {
                    updateVehicleOptionsWithAvailability(currentProvider.vehicles);
                }
            });
            
            if (endDateInput) endDateInput.addEventListener('change', function() {
                if (currentProvider && currentProvider.vehicles.length > 0) {
                    updateVehicleOptionsWithAvailability(currentProvider.vehicles);
                }
            });
            
            // Form submission
            const bookingForm = document.getElementById('bookingForm');
            if (bookingForm) bookingForm.addEventListener('submit', handleBooking);
            
            // Keyboard support
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    closeBookingModal();
                }
            });
        }
        
        // Date input setup
        function setupDateInputs() {
            const today = new Date().toISOString().split('T')[0];
            const tomorrow = new Date();
            tomorrow.setDate(tomorrow.getDate() + 1);
            const tomorrowStr = tomorrow.toISOString().split('T')[0];
            
            const startDateInput = document.getElementById('startDate');
            const endDateInput = document.getElementById('endDate');
            
            if (startDateInput) {
                startDateInput.min = today;
                startDateInput.value = today;
            }
            
            if (endDateInput) {
                endDateInput.min = tomorrowStr;
                endDateInput.value = tomorrowStr;
            }
        }
        
        // Apply filters
        function applyFilters() {
            const searchTerm = document.getElementById('search').value.toLowerCase();
            const districtFilter = document.getElementById('district').value;
            const priceFilter = document.getElementById('price-range').value;
            const selectedVehicleTypes = Array.from(document.querySelectorAll('.vehicle-tag.selected'))
                .map(tag => tag.dataset.vehicleType);
            
            document.querySelectorAll('.provider-card').forEach(card => {
                const providerName = card.querySelector('.provider-name').textContent.toLowerCase();
                const providerDistrict = card.dataset.district;
                const minPrice = parseFloat(card.dataset.minPrice) || 0;
                const maxPrice = parseFloat(card.dataset.maxPrice) || 0;
                const avgPrice = (minPrice + maxPrice) / 2;
                const providerVehicleTypes = card.dataset.vehicleTypes.split(',');
                
                let matches = true;
                
                // Search filter
                if (searchTerm && !providerName.includes(searchTerm)) {
                    matches = false;
                }
                
                // District filter
                if (districtFilter && providerDistrict !== districtFilter) {
                    matches = false;
                }
                
                // Price filter
                if (priceFilter) {
                    const [min, max] = priceFilter.split('-').map(Number);
                    if (avgPrice < min || avgPrice > max) {
                        matches = false;
                    }
                }
                
                // Vehicle type filter
                if (selectedVehicleTypes.length > 0) {
                    const hasSelectedType = selectedVehicleTypes.some(type => 
                        providerVehicleTypes.includes(type)
                    );
                    if (!hasSelectedType) {
                        matches = false;
                    }
                }
                
                card.style.display = matches ? 'block' : 'none';
            });
            
            // Show no providers message if needed
            const visibleCards = document.querySelectorAll('.provider-card[style="display: block"]');
            const noProvidersMsg = document.querySelector('.no-providers');
            
            if (visibleCards.length === 0) {
                if (!noProvidersMsg) {
                    const providerGrid = document.getElementById('providerGrid');
                    const msgDiv = document.createElement('div');
                    msgDiv.className = 'no-providers';
                    msgDiv.innerHTML = `
                        <div class="no-providers-icon">
                            <i class="fas fa-car"></i>
                        </div>
                        <h3>No transport providers found</h3>
                        <p>Try adjusting your filters or check back later for new providers</p>
                    `;
                    providerGrid.appendChild(msgDiv);
                }
            } else if (noProvidersMsg) {
                noProvidersMsg.remove();
            }
        }
        
        // Clear filters
        function clearFilters() {
            document.getElementById('search').value = '';
            document.getElementById('district').value = '';
            document.getElementById('price-range').value = '';
            
            document.querySelectorAll('.vehicle-tag.selected').forEach(tag => {
                tag.classList.remove('selected');
            });
            
            applyFilters();
        }
        
        // Open booking modal
        function openBookingModal(e) {
            e.preventDefault();
            
            const providerId = parseInt(e.currentTarget.dataset.providerId);
            const providerCard = document.querySelector(`.provider-card[data-provider-id="${providerId}"]`);
            
            if (!providerCard) return;
            
            // Extract provider data
            const providerName = providerCard.querySelector('.provider-name').textContent;
            const providerLocation = providerCard.querySelector('.provider-location span').textContent;
            const district = providerCard.dataset.district;
            
            // Parse vehicle details from data attribute
            let vehicles = [];
            try {
                vehicles = JSON.parse(providerCard.dataset.vehicles || '[]');
            } catch (e) {
                console.error('Error parsing vehicle details:', e);
                vehicles = [];
            }
            
            currentProvider = {
                id: providerId,
                name: providerName,
                location: providerLocation,
                district: district,
                vehicles: vehicles
            };
            
            // Update modal
            document.getElementById('modalProviderName').textContent = currentProvider.name;
            document.getElementById('modalProviderLocation').textContent = currentProvider.location;
            document.getElementById('providerName').value = currentProvider.name;
            
            // Populate vehicle options
            updateVehicleOptionsWithAvailability(vehicles);
            
            // Populate provider details
            const detailsContainer = document.getElementById('providerDetails');
            let vehicleDetailsHTML = '';
            
            if (vehicles.length > 0) {
                vehicles.forEach(vehicle => {
                    const availability = vehicle.availability || 0;
                    let availabilityClass = availability === 1 ? 'available' : 'not-available';
                    
                    vehicleDetailsHTML += `
                        <div class="detail-card">
                            <div class="detail-label">
                                <i class="fas fa-${vehicle.vehicle_type.toLowerCase().includes('car') ? 'car' : 
                                    vehicle.vehicle_type.toLowerCase().includes('bus') ? 'bus' : 
                                    vehicle.vehicle_type.toLowerCase().includes('van') ? 'van' : 
                                    'shuttle-van'}"></i> ${vehicle.vehicle_type}
                            </div>
                            <div class="detail-value">
                                LKR ${parseFloat(vehicle.price_per_km || 0).toLocaleString('en-LK')}/km  
                                <span class="vehicle-availability ${availabilityClass}">
                                    <i class="fas fa-${availability === 1 ? 'check' : 'times'}"></i>
                                    ${availability === 1 ? 'Available' : 'Not Available'}
                                </span>
                            </div>
                        </div>
                    `;
                });
            }
            
            detailsContainer.innerHTML = `
                <div class="detail-card">
                    <div class="detail-label">
                        <i class="fas fa-building"></i> Provider Name
                    </div>
                    <div class="detail-value">${currentProvider.name}</div>
                </div>
                
                <div class="detail-card">
                    <div class="detail-label">
                        <i class="fas fa-map-marker-alt"></i> Location
                    </div>
                    <div class="detail-value">${currentProvider.location}</div>
                </div>
                
                <div class="detail-card">
                    <div class="detail-label">
                        <i class="fas fa-location-dot"></i> District
                    </div>
                    <div class="detail-value">${currentProvider.district}</div>
                </div>
                ${vehicleDetailsHTML}
            `;
            
            // Reset form
            setupDateInputs();
            document.getElementById('pickupLocation').value = '';
            document.getElementById('destinationLocations').value = '';
            document.getElementById('notes').value = '';
            
            // Show modal
            document.getElementById('bookingModal').style.display = 'flex';
        }
        
        // Update vehicle options with availability
        function updateVehicleOptionsWithAvailability(vehicles) {
            const vehicleOptionsContainer = document.getElementById('vehicleOptions');
            vehicleOptionsContainer.innerHTML = '';
            
            // Filter available vehicles (availability = 1)
            const availableVehicles = vehicles.filter(vehicle => vehicle.availability === 1);
            
            if (availableVehicles.length === 0) {
                vehicleOptionsContainer.innerHTML = `
                    <div style="text-align: center; padding: 30px; color: var(--text-light);">
                        <i class="fas fa-car" style="font-size: 3rem; margin-bottom: 15px; color: #cbd5e1;"></i>
                        <p>No vehicles available for selected dates</p>
                    </div>
                `;
                return;
            }
            
            // Create vehicle options
            availableVehicles.forEach(vehicle => {
                const capacityText = `${vehicle.max_passengers || 4} passengers`;
                
                const optionDiv = document.createElement('div');
                optionDiv.className = 'vehicle-option-card';
                optionDiv.dataset.vehicleId = vehicle.id;
                optionDiv.dataset.price = vehicle.price_per_km;
                optionDiv.dataset.vehicleType = vehicle.vehicle_type;
                optionDiv.dataset.maxPassengers = vehicle.max_passengers;
                
                optionDiv.innerHTML = `
                    <div class="vehicle-option-info">
                        <div class="vehicle-type-name">${vehicle.vehicle_type}</div>
                        <div class="vehicle-capacity">
                            <i class="fas fa-users"></i>
                            ${capacityText}
                        </div>
                        <div class="vehicle-availability available">
                            <i class="fas fa-check"></i> Available
                        </div>
                    </div>
                    <div class="vehicle-price">
                        LKR ${parseFloat(vehicle.price_per_km || 0).toLocaleString('en-LK')}
                        <span class="vehicle-price-unit">/ km</span>
                    </div>
                `;
                
                optionDiv.addEventListener('click', function() {
                    document.querySelectorAll('.vehicle-option-card').forEach(opt => {
                        opt.classList.remove('selected');
                    });
                    this.classList.add('selected');
                });
                
                vehicleOptionsContainer.appendChild(optionDiv);
            });
            
            // Select first available vehicle by default
            const availableOptions = Array.from(vehicleOptionsContainer.querySelectorAll('.vehicle-option-card'));
            if (availableOptions.length > 0) {
                availableOptions[0].click();
            }
        }
        
        // Open details modal (if you want a separate details view)
        function openDetailsModal(e) {
            e.preventDefault();
            const providerId = parseInt(e.currentTarget.dataset.providerId);
            // You can implement a details modal here or redirect to a details page
            window.location.href = `/transport-providers/${providerId}`;
        }
        
        // Close booking modal
        function closeBookingModal() {
            document.getElementById('bookingModal').style.display = 'none';
            currentProvider = null;
        }
        
        // Validate booking form
        function validateBookingForm() {
            const requiredFields = [
                { id: 'guestName', name: 'Full Name' },
                { id: 'guestEmail', name: 'Email Address' },
                { id: 'pickupLocation', name: 'Pickup Location' },
                { id: 'startDate', name: 'Start Date' },
                { id: 'endDate', name: 'End Date' }
            ];
            
            for (const field of requiredFields) {
                const element = document.getElementById(field.id);
                if (!element || !element.value.trim()) {
                    showNotification(`Please fill in the ${field.name} field`, 'warning');
                    if (element) element.focus();
                    return false;
                }
            }
            
            // Email validation
            const email = document.getElementById('guestEmail').value;
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailRegex.test(email)) {
                showNotification('Please enter a valid email address', 'warning');
                document.getElementById('guestEmail').focus();
                return false;
            }
            
            // Date validation
            const startDate = new Date(document.getElementById('startDate').value);
            const endDate = new Date(document.getElementById('endDate').value);
            const today = new Date();
            today.setHours(0, 0, 0, 0);
            
            if (startDate < today) {
                showNotification('Start date cannot be in the past', 'warning');
                document.getElementById('startDate').focus();
                return false;
            }
            
            if (startDate >= endDate) {
                showNotification('End date must be after start date', 'warning');
                document.getElementById('endDate').focus();
                return false;
            }
            
            // Check if vehicle is selected
            const selectedVehicle = document.querySelector('.vehicle-option-card.selected');
            if (!selectedVehicle) {
                showNotification('Please select a vehicle type', 'warning');
                return false;
            }
            
            return true;
        }
        
        // Handle booking submission
        async function handleBooking(e) {
            e.preventDefault();
            
            // Check if user is logged in
            if (!loggedInUser) {
                showNotification('Please login to book transport', 'error');
                setTimeout(() => {
                    window.location.href = '/login?redirect=' + encodeURIComponent(window.location.pathname);
                }, 1500);
                return;
            }
            
            // Validate form
            if (!validateBookingForm()) {
                return;
            }
            
            const selectedVehicle = document.querySelector('.vehicle-option-card.selected');
            if (!selectedVehicle) {
                showNotification('Please select a vehicle type', 'error');
                return;
            }
            
            const vehicleId = selectedVehicle.dataset.vehicleId;
            
            // Prepare booking data
            const bookingData = {
                transport_provider_id: currentProvider.id,
                vehicle_id: vehicleId,
                pickup_location: document.getElementById('pickupLocation').value,
                destination_locations: document.getElementById('destinationLocations').value,
                start_date: document.getElementById('startDate').value,
                end_date: document.getElementById('endDate').value,
                notes: document.getElementById('notes').value
            };
            
            console.log('Sending booking data:', bookingData);
            
            try {
                // Show loading
                const confirmBtn = document.getElementById('confirmBooking');
                const originalText = confirmBtn.innerHTML;
                confirmBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';
                confirmBtn.disabled = true;
                
                const response = await fetch('/transport-bookings', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(bookingData)
                });
                
                if (!response.ok) {
                    const errorText = await response.text();
                    throw new Error(`Server responded with status ${response.status}`);
                }
                
                const result = await response.json();
                
                if (result.success) {
                    // Success
                    showNotification(' Transport booking request submitted! Your booking is pending approval.', 'success');
                    
                    // Close modal
                    setTimeout(() => {
                        closeBookingModal();
                    }, 2000);
                    
                } else {
                    // Error from server
                    showNotification(` ${result.message || 'Booking failed. Please try again.'}`, 'error');
                }
                
            } catch (error) {
                console.error('Booking error details:', error);
                
                if (error.message.includes('NetworkError') || error.message.includes('Failed to fetch')) {
                    showNotification(' Network error. Please check your connection and try again.', 'error');
                } else {
                    showNotification(` Error: ${error.message}`, 'error');
                }
            } finally {
                // Reset button
                const confirmBtn = document.getElementById('confirmBooking');
                if (confirmBtn) {
                    confirmBtn.innerHTML = '<i class="fas fa-check"></i> Confirm Booking';
                    confirmBtn.disabled = false;
                }
            }
        }
        
        // Notification system
        function showNotification(message, type = 'info') {
            // Remove existing notifications
            const existingNotification = document.querySelector('.notification-toast');
            if (existingNotification) {
                existingNotification.remove();
            }
            
            // Create notification
            const notification = document.createElement('div');
            notification.className = `notification-toast notification-${type}`;
            notification.innerHTML = `
                <div class="notification-content">
                    <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'error' ? 'exclamation-circle' : 'info-circle'}"></i>
                    <span>${message}</span>
                </div>
                <button class="notification-close">
                    <i class="fas fa-times"></i>
                </button>
            `;
            
            // Add styles
            const style = document.createElement('style');
            style.textContent = `
                .notification-toast {
                    position: fixed;
                    top: 30px;
                    right: 30px;
                    background: white;
                    padding: 20px;
                    border-radius: 12px;
                    box-shadow: 0 10px 30px rgba(0,0,0,0.2);
                    display: flex;
                    align-items: center;
                    gap: 15px;
                    z-index: 10000;
                    animation: slideIn 0.3s ease-out;
                    border-left: 5px solid;
                    max-width: 400px;
                }
                
                .notification-success {
                    border-left-color: #10b981;
                }
                
                .notification-error {
                    border-left-color: #ef4444;
                }
                
                .notification-warning {
                    border-left-color: #f59e0b;
                }
                
                .notification-info {
                    border-left-color: #3b82f6;
                }
                
                .notification-content {
                    display: flex;
                    align-items: center;
                    gap: 12px;
                    flex: 1;
                }
                
                .notification-content i {
                    font-size: 1.2rem;
                }
                
                .notification-success .notification-content i {
                    color: #10b981;
                }
                
                .notification-error .notification-content i {
                    color: #ef4444;
                }
                
                .notification-warning .notification-content i {
                    color: #f59e0b;
                }
                
                .notification-info .notification-content i {
                    color: #3b82f6;
                }
                
                .notification-close {
                    background: none;
                    border: none;
                    color: #64748b;
                    cursor: pointer;
                    font-size: 1.2rem;
                    padding: 0;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    width: 30px;
                    height: 30px;
                    border-radius: 50%;
                    transition: all 0.3s;
                }
                
                .notification-close:hover {
                    background: #f1f5f9;
                    color: #1e293b;
                }
                
                @keyframes slideIn {
                    from {
                        transform: translateX(100%);
                        opacity: 0;
                    }
                    to {
                        transform: translateX(0);
                        opacity: 1;
                    }
                }
            `;
            
            document.head.appendChild(style);
            document.body.appendChild(notification);
            
            // Add close functionality
            notification.querySelector('.notification-close').addEventListener('click', () => {
                notification.remove();
            });
            
            // Auto remove after 5 seconds
            setTimeout(() => {
                if (notification.parentNode) {
                    notification.remove();
                }
            }, 5000);
        }
    </script>
