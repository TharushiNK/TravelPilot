            const shareLink = `${window.location.origin}/bookings/share/${type}/${bookingId}`;
            shareLinkInput.value = shareLink;
            
            modal.show();
        }

        // Share functions
        function shareViaEmail() {
            const subject = 'Check out my booking on TravelPilot';
            const body = `I wanted to share my booking details with you:\n\n${document.getElementById('shareLink').value}`;
            window.location.href = `mailto:?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
        }

        function shareViaWhatsApp() {
            const text = 'Check out my booking on TravelPilot: ' + document.getElementById('shareLink').value;
            window.open(`https://wa.me/?text=${encodeURIComponent(text)}`, '_blank');
        }

        function shareViaFacebook() {
            const url = document.getElementById('shareLink').value;
            window.open(`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(url)}`, '_blank');
        }

        function copyShareLink() {
            const shareLink = document.getElementById('shareLink');
            shareLink.select();
            document.execCommand('copy');
            
            // Show feedback
