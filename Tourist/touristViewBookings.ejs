    <script>
        // Set current date
        document.getElementById('currentDate').textContent = new Date().toLocaleDateString('en-US', {
            weekday: 'long',
            year: 'numeric',
            month: 'long',
            day: 'numeric'
        });

        // Calculate remaining days
        function calculateRemainingDays(endDate) {
            const end = new Date(endDate);
            const today = new Date();
            const diffTime = end - today;
            const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
            return diffDays > 0 ? diffDays : 0;
        }

        // Filter bookings by type
        function filterAllBookings(type) {
            const buttons = document.querySelectorAll('#all .filter-btn');
            buttons.forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');
            
            const cards = document.querySelectorAll('#allBookingsGrid .booking-card');
            cards.forEach(card => {
                if (type === 'all' || card.dataset.type === type) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        }

        function filterOngoingBookings(type) {
            // Similar implementation for ongoing bookings
            const cards = document.querySelectorAll('#ongoingBookingsGrid .booking-card');
            cards.forEach(card => {
                if (type === 'all' || card.dataset.type === type) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        }

        // Filter by status
        function filterBookings(status) {
            // Switch to appropriate tab and filter
            const tab = bootstrap.Tab.getInstance(document.querySelector(`#${status}-tab`));
            tab.show();
        }

        // Show specific booking type
        function showBookings(type) {
            // Set active filter button for all tab
            const allTabFilter = document.querySelector('#all .filter-btn');
            const targetFilter = document.querySelector(`#all .filter-btn[onclick*="${type}"]`);
            
            if (targetFilter) {
                allTabFilter.classList.remove('active');
                targetFilter.classList.add('active');
                filterAllBookings(type);
            }
            
            // Switch to all tab
            const allTab = new bootstrap.Tab(document.querySelector('#all-tab'));
            allTab.show();
        }

        // Show suggestions section
        function showSuggestions() {
            document.getElementById('suggestionsSection').style.display = 'block';
            generateSuggestions();
            
            // Scroll to suggestions
            document.getElementById('suggestionsSection').scrollIntoView({
                behavior: 'smooth'
            });
        }

        // Generate travel suggestions
        async function generateSuggestions() {
            const content = document.getElementById('suggestionsContent');
            content.innerHTML = `
                <div class="text-center py-4">
                    <div class="spinner-border text-light" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-3">Analyzing your travel history...</p>
                </div>
            `;
            
            try {
                const response = await fetch('/bookings/suggestions');
                if (response.ok) {
                    const html = await response.text();
                    // Extract suggestions content from the response
                    const parser = new DOMParser();
                    const doc = parser.parseFromString(html, 'text/html');
                    const suggestions = doc.querySelector('.suggestions-grid') || doc.createElement('div');
                    content.innerHTML = suggestions.outerHTML;
                } else {
                    content.innerHTML = `
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i>
                            Could not generate suggestions. Please try again later.
                        </div>
                    `;
                }
            } catch (error) {
                content.innerHTML = `
                    <div class="alert alert-danger">
                        <i class="fas fa-times-circle"></i>
                        Error loading suggestions: ${error.message}
                    </div>
                `;
            }
        }

        // View booking details
        async function viewBookingDetails(bookingId, type) {
            const modal = new bootstrap.Modal(document.getElementById('bookingDetailsModal'));
            const content = document.getElementById('bookingDetailsContent');
            
            content.innerHTML = `
                <div class="text-center py-4">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-3">Loading details...</p>
                </div>
            `;
            
            modal.show();
            
            try {
                // Fetch booking details based on type
                let endpoint;
                switch(type) {
                    case 'hotel':
                        endpoint = `/api/hotel-bookings/${bookingId}`;
                        break;
                    case 'tour-guide':
                        endpoint = `/api/guide-bookings/${bookingId}`;
                        break;
                    case 'transport':
                        endpoint = `/api/transport-bookings/${bookingId}`;
                        break;
                    default:
                        throw new Error('Invalid booking type');
                }
                
                const response = await fetch(endpoint);
                if (response.ok) {
                    const booking = await response.json();
                    
                    content.innerHTML = `
                        <div class="row">
                            <div class="col-md-6">
                                <h6>Booking Information</h6>
                                <p><strong>ID:</strong> #${booking.id}</p>
                                <p><strong>Status:</strong> <span class="badge bg-${booking.status === 1 ? 'success' : 'warning'}">${booking.status === 1 ? 'Confirmed' : 'Pending'}</span></p>
                                <p><strong>Created:</strong> ${new Date(booking.created_at).toLocaleDateString()}</p>
                            </div>
                            <div class="col-md-6">
                                <h6>Service Details</h6>
                                <p><strong>Name:</strong> ${booking.service_name}</p>
                                <p><strong>Location:</strong> ${booking.location}</p>
                                ${booking.specialization ? `<p><strong>Specialization:</strong> ${booking.specialization}</p>` : ''}
                                ${booking.vehicle_details ? `<p><strong>Vehicle:</strong> ${booking.vehicle_details}</p>` : ''}
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-12">
                                <h6>Dates</h6>
                                <p><strong>Start:</strong> ${new Date(booking.start_date).toLocaleDateString()}</p>
                                <p><strong>End:</strong> ${new Date(booking.end_date).toLocaleDateString()}</p>
                                <p><strong>Duration:</strong> ${booking.duration} ${type === 'tour-guide' ? 'days' : 'nights'}</p>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-12">
                                <h6>Payment</h6>
                                <p><strong>Total Amount:</strong> LKR ${parseFloat(booking.total_amount || 0).toFixed(2)}</p>
                                ${booking.discounted_amount ? `<p><strong>Discount:</strong> LKR ${parseFloat(booking.discounted_amount).toFixed(2)}</p>` : ''}
                            </div>
                        </div>
                    `;
                } else {
                    content.innerHTML = `
                        <div class="alert alert-danger">
                            Could not load booking details.
                        </div>
                    `;
                }
            } catch (error) {
                content.innerHTML = `
                    <div class="alert alert-danger">
                        Error: ${error.message}
                    </div>
                `;
            }
        }

        // Cancel booking
        async function cancelBooking(bookingId, type) {
            if (!confirm('Are you sure you want to cancel this booking?')) return;
            
            try {
                let endpoint;
                switch(type) {
                    case 'hotel':
                        endpoint = `/api/bookings/${bookingId}/status`;
                        break;
                    case 'tour-guide':
                        endpoint = `/api/tour-guide-bookings/${bookingId}/status`;
                        break;
                    case 'transport':
                        endpoint = `/api/transport-bookings/${bookingId}/status`;
                        break;
                }
                
                const response = await fetch(endpoint, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ status: 2 }) // 2 = cancelled
                });
                
                if (response.ok) {
                    alert('Booking cancelled successfully!');
                    location.reload();
                } else {
                    alert('Failed to cancel booking. Please try again.');
                }
            } catch (error) {
                alert('Error: ' + error.message);
            }
        }

        // Share booking
        function shareBooking(bookingId, type) {
